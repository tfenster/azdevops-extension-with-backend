{
    "configurations": [
        {
            "type": "node-terminal",
            "name": "Start frontend",
            "request": "launch",
            "command": "npm run start",
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "node-terminal",
            "name": "Publish extension in dev mode",
            "request": "launch",
            "command": "npm run publish",
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Start Firefox",
            "type": "firefox",
            "request": "launch",
            "url": "https://localhost:3000/",
            "reAttach": true,
            "pathMappings": [
                {
                    "url": "webpack:///",
                    "path": "${workspaceFolder}/"
                }
            ]
        }
    ]
}